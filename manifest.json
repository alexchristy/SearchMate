{
  "manifest_version": 2,
  "name": "Chat Extension",
  "version": "1.0",
  "description": "A basic chat extension",
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "img/gator-hack-smaller.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": ["popup.html"]
}
